@model IEnumerable<Consultas.Models.CursoAlumnoWeb>

<div class="list-group list-group-flush" style="font-size: small;">
    <a href="#" class="list-group-item list-group-item-action detail disabled" id="listheader"
       style="color: brown; padding: 0;">
        <h4>Sus cursos</h4>
    </a>
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Details", new { id=item.Id})" style="padding: 5px;"
           class="list-group-item list-group-item-action detail" id="@("lnk" + item.Id)">
            @(String.Format("{0} de {1}", item.Curso, item.Carrera))
        </a>
    }

    @if (Consultas.Lib.Configuration.Debug)
    {
        using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.Hidden("Password", "Donde hay paz, está Dios. Y donde está Dios no falta nada.")
            <span>DNI: </span>
            @Html.TextBox("UserName")
            <input type="submit" value="Cambiar alumno" />
        }
    }
</div>
