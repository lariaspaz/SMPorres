@model Consultas.Models.PagoWeb

@if (Model == null)
{
    <span>No hay cuotas pendientes de pago.</span>
}
else
{
    <div class="row mt-3">
        <div class="col-sm">
            Próxima Cuota: @((Model.NroCuota == 0) ? "Matrícula" : Model.NroCuota.ToString())
        </div>
        <div class="col-sm text-right">
            Importe: @Model.ImporteCuota.ToString("C2")
        </div>
        <div class="col-sm-6">
        </div>
    </div>
        @*@if (Model.ImportePagoTermino > 0)
